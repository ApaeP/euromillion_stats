<div class="text-center mb-4">
  <h1 class="display-5 fw-bold">üìä Statistiques EuroMillions</h1>
  <p class="text-muted">P√©riode : <%= @stats.starts_at&.strftime('%d/%m/%Y') %> - <%= @stats.ends_at&.strftime('%d/%m/%Y') %></p>
</div>

<div class="row mb-4">
  <div class="col-6 col-lg mb-3">
    <%= render StatCardComponent.new(value: @stats.draws_count, label: "Tirages", icon: "fa-solid fa-dice") %>
  </div>
  <div class="col-6 col-lg mb-3">
    <%= render StatCardComponent.new(value: "#{number_to_human(@stats.gains)} ‚Ç¨", label: "Gains totaux", icon: "fa-solid fa-sack-dollar", variant: :success, tooltip: "#{number_with_delimiter(@stats.gains)} ‚Ç¨") %>
  </div>
  <div class="col-6 col-lg mb-3">
    <%= render StatCardComponent.new(value: @stats.winners, label: "Gagnants", icon: "fa-solid fa-trophy", variant: :gold) %>
  </div>
  <div class="col-6 col-lg mb-3">
    <%= render StatCardComponent.new(value: @stats.won_draws_count, label: "Tirages gagn√©s", icon: "fa-solid fa-star", variant: :info) %>
  </div>
  <div class="col-12 col-lg mb-3">
    <%= render StatCardComponent.new(value: "#{number_to_human(@stats.avg_jackpot)} ‚Ç¨", label: "Jackpot moyen", icon: "fa-solid fa-coins", tooltip: "#{number_with_delimiter(@stats.avg_jackpot)} ‚Ç¨") %>
  </div>
</div>

<div class="card border-0 shadow-sm mb-4">
  <div class="card-body">
    <%= simple_form_for :query, url: frequencies_draws_path, method: :get, html: { data: { controller: "flatpickr" } } do |f| %>
      <h5 class="fw-bold mb-3"><i class="fa-solid fa-filter me-2"></i>Filtrer</h5>

      <div class="row mb-3">
        <div class="col-md-4 mb-2 mb-md-0">
          <%= f.text_field :start, class: 'form-control', value: @start_date, placeholder: 'Date d√©but', data: { flatpickr_target: "start" } %>
        </div>
        <div class="col-md-4 mb-2 mb-md-0">
          <%= f.text_field :end, class: 'form-control', value: @end_date, placeholder: 'Date fin', data: { flatpickr_target: "end" } %>
        </div>
        <div class="col-md-4">
          <%= f.submit 'Filtrer', class: 'btn btn-primary w-100' %>
        </div>
      </div>

      <div class="d-flex flex-wrap justify-content-center mb-3">
        <%= link_to "Tout", frequencies_draws_path, class: "btn btn-sm m-1 #{params[:year].blank? && params.dig(:query, :start).blank? ? 'btn-primary' : 'btn-outline-secondary'}" %>
        <% if Draw.any? %>
          <% Draw.pluck(:date).map(&:year).uniq.sort.reverse.each do |year| %>
            <%= link_to year, frequencies_draws_path(year: year), class: "btn btn-sm m-1 #{year == @year ? 'btn-primary' : 'btn-outline-secondary'}" %>
          <% end %>
        <% end %>
      </div>

      <div class="d-flex flex-wrap justify-content-center align-items-center">
        <span class="text-muted small me-2">Trier par :</span>
        <% [['Num√©rique', 'number'], ['Fr√©quence', 'frequency'], ['Mardis', 'tuesdays'], ['Vendredis', 'fridays'], ['Retard', 'overdue']].each do |label, value| %>
          <div class="form-check form-check-inline">
            <%= f.radio_button :sort_by, value, class: 'form-check-input', id: "sort_#{value}", checked: @sort_by.to_s == value, onchange: 'this.form.submit()' %>
            <label class="form-check-label" for="sort_<%= value %>"><%= label %></label>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-6 mb-4 mb-md-0">
    <%= render SectionCardComponent.new(title: "Num√©ros Chauds", subtitle: "Les plus fr√©quents", icon: "üî•", variant: :hot) do %>
      <div class="d-flex flex-wrap justify-content-center mb-3">
        <% @stats.hot_numbers&.each do |num| %>
          <div class="m-1"><%= render NumberBallComponent.new(number: num.number, size: :lg, variant: :hot, show_frequency: true, frequency: num.frequency) %></div>
        <% end %>
      </div>
      <hr>
      <small class="text-muted">√âtoiles</small>
      <div class="d-flex flex-wrap justify-content-center mt-2">
        <% @stats.hot_stars&.each do |star| %>
