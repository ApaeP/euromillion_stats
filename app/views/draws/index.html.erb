<div class="text-center mb-4">
  <h1 class="display-5 fw-bold">üé∞ <%= t('results.title') %></h1>
  <p class="text-muted"><%= t('results.subtitle') %></p>
</div>

<div data-controller="tabs" data-tabs-active-value="<%= Time.zone.now.year %>">
  <ul class="nav nav-pills nav-fill flex-wrap justify-content-center mb-4" role="tablist">
    <% @years.each do |year| %>
      <li class="nav-item m-1">
        <a class="nav-link <%= 'active' if year == Time.zone.now.year %>"
           href="#"
           role="tab"
           data-tabs-target="tab"
           data-tab-id="<%= year %>"
           data-action="click->tabs#switch">
          <%= year %>
        </a>
      </li>
    <% end %>
  </ul>

  <div class="tab-content">
    <% @draws_by_year.each do |year, draws| %>
      <div class="tab-pane fade <%= "show active" if year == Time.zone.now.year %>"
           id="tab-<%= year %>"
           role="tabpanel"
           data-tabs-target="panel">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="h4 fw-bold text-primary mb-0">
            <span class="text-gold me-2">‚òÖ</span>
            <%= year %>
          </h2>
          <span class="badge bg-primary rounded-pill px-3 py-2">
            <%= draws.count %> <%= t('results.draws') %>
          </span>
        </div>

        <div class="draws-list">
          <% draws.sort_by(&:date).reverse.each do |draw| %>
            <div class="card border-0 shadow-sm mb-3" style="<%= 'border-left: 4px solid #10B981 !important;' if draw.won? %>">
              <div class="card-body py-3">
                <div class="row align-items-center">

                  <div class="col-12 col-md-2 mb-3 mb-md-0 text-center text-md-start">
                    <div class="d-flex align-items-center justify-content-center justify-content-md-start">
                      <div class="bg-primary text-white rounded text-center me-3" style="width: 50px; padding: 8px 0;">
                        <div class="fw-bold" style="font-size: 1.25rem; line-height: 1;"><%= draw.date.strftime("%d") %></div>
                        <div style="font-size: 0.65rem; text-transform: uppercase;"><%= l(draw.date, format: '%b') %></div>
                      </div>
                      <div>
                        <div class="fw-bold"><%= l(draw.date, format: '%A') %></div>
                        <div class="text-muted small"><%= draw.date.strftime("%Y") %></div>
                      </div>
                    </div>
                  </div>

                  <div class="col-12 col-md-6 mb-3 mb-md-0">
                    <div class="d-flex justify-content-center flex-wrap">
                      <% draw.numbers.each do |n| %>
                        <span class="m-1"><%= render NumberBallComponent.new(number: n, size: :md) %></span>
                      <% end %>
                      <span class="mx-2 d-flex align-items-center text-muted">|</span>
                      <% draw.stars.each do |s| %>
                        <span class="m-1"><%= render StarBallComponent.new(number: s, size: :md) %></span>
                      <% end %>
                    </div>
                  </div>

                  <div class="col-12 col-md-4 text-center text-md-end">
                    <% if draw.won? %>
                      <div class="d-inline-block text-start">
                        <div class="fw-bold text-success" style="font-size: 1.1rem;" title="<%= number_with_delimiter(draw.prize_amount) %> ‚Ç¨">
                          üèÜ <%= number_to_human(draw.prize_amount, locale: :fr) %> ‚Ç¨
                        </div>
                        <div class="text-muted small">
                          <%= draw.winners %> <%= draw.winners > 1 ? t('home.winners') : t('home.winner') %>
                        </div>
                      </div>
                    <% else %>
                      <div class="text-muted">
                        <span class="badge bg-light text-dark px-3 py-2"><%= t('results.no_winner') %></span>
                        <div class="small mt-1" title="<%= number_with_delimiter(draw.prize_amount) %> ‚Ç¨">
                          <%= t('home.jackpot') %>: <%= number_to_human(draw.prize_amount, locale: :fr) %> ‚Ç¨
                        </div>
                      </div>
                    <% end %>
                  </div>

                </div>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    <% end %>
  </div>
</div>

<style>
  .nav-pills .nav-link {
    border-radius: 50px;
    padding: 0.5rem 1rem;
    font-weight: 600;
    font-size: 0.875rem;
    color: #64748B;
    background: #F1F5F9;
    transition: all 0.2s;
  }
  .nav-pills .nav-link:hover {
    background: #E2E8F0;
  }
  .nav-pills .nav-link.active {
    background: #0D1B3E;
    color: white;
  }
</style>
