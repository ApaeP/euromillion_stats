<div class="card border-0 shadow mb-4">
  <div class="card-header bg-<%= variant_class %> <%= text_class %> py-3">
    <div class="d-flex align-items-center">
      <% if icon %><span class="mr-2" style="font-size: 1.25rem;"><%= icon %></span><% end %>
      <div>
        <h5 class="mb-0 font-weight-bold"><%= title %></h5>
        <% if subtitle %><small style="opacity: 0.8;"><%= subtitle %></small><% end %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <%= content %>
  </div>
</div>
