<div class="d-flex align-items-center justify-content-between p-2 bg-light rounded mb-2">
  <div class="d-flex align-items-center">
    <% if rank %><span class="text-muted small fw-bold me-2">#<%= rank %></span><% end %>
    <div class="d-flex flex-wrap">
      <% combination.numbers.each do |n| %>
        <span class="me-1">
          <% if numbers? %>
            <%= render NumberBallComponent.new(number: n, size: :sm) %>
          <% else %>
            <%= render StarBallComponent.new(number: n, size: :sm) %>
          <% end %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="text-end">
    <div class="fw-bold small"><%= combination.count %>Ã—</div>
    <div class="text-muted" style="font-size: 0.7rem;"><%= combination.percentage %>%</div>
  </div>
</div>
